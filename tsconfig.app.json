{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting - Gradually enabling strict mode */
    "strict": true,
    "noUnusedLocals": false,           // Keep disabled for now
    "noUnusedParameters": false,       // Keep disabled for now  
    "noImplicitAny": false,            // Keep disabled initially, will enable after fixing types
    "strictNullChecks": true,          // Enable null checks
    "strictFunctionTypes": true,       // Enable strict function types
    "noImplicitThis": true,            // Enable strict this checking
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "exactOptionalPropertyTypes": false, // Keep disabled for now

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
