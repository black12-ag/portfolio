{
  "name": "Metah Travel Platform",
  "short_name": "Metah",
  "description": "Your comprehensive travel booking platform for accommodations, flights, experiences, and more.",
  "theme_color": "#667eea",
  "background_color": "#ffffff",
  "display": "standalone",
  "orientation": "portrait-primary",
  "scope": "/",
  "start_url": "/",
  "id": "/",
  "categories": ["travel", "lifestyle", "business"],
  "lang": "en",
  "dir": "ltr",
  "icons": [
    {
      "src": "/favicon.ico",
      "sizes": "48x48",
      "type": "image/x-icon"
    },
    {
      "src": "/logo192.png", 
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/logo512.png",
      "sizes": "512x512", 
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Metah Travel - Desktop Home"
    },
    {
      "src": "/screenshots/mobile-search.png", 
      "sizes": "375x667",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Metah Travel - Mobile Search"
    }
  ],
  "shortcuts": [
    {
      "name": "Search Properties",
      "short_name": "Search",
      "description": "Quickly search for accommodations",
      "url": "/properties",
      "icons": [
        {
          "src": "/icons/search-96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "My Bookings",
      "short_name": "Bookings", 
      "description": "View your travel bookings",
      "url": "/bookings",
      "icons": [
        {
          "src": "/icons/bookings-96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Host Dashboard",
      "short_name": "Host",
      "description": "Manage your properties",
      "url": "/host-dashboard",
      "icons": [
        {
          "src": "/icons/host-96.png", 
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Profile",
      "short_name": "Profile",
      "description": "Access your profile and settings",
      "url": "/profile",
      "icons": [
        {
          "src": "/icons/profile-96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.metah.travel",
      "id": "com.metah.travel"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/metah-travel/id123456789"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "metah",
      "url": "/booking?id=%s"
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text", 
      "url": "url",
      "files": [
        {
          "name": "images",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/open-booking",
      "accept": {
        "application/vnd.metah.booking": ".mbk"
      }
    }
  ],
  "offline_enabled": true,
  "features": [
    "offline-browsing",
    "push-notifications", 
    "background-sync",
    "geolocation",
    "camera",
    "payment-processing"
  ]
}
