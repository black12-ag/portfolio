# Production Environment Variables for METAH Travel Platform

# API Configuration
VITE_API_BASE_URL=https://api.metah.travel
VITE_API_VERSION=v1
VITE_API_TIMEOUT=30000

# Authentication & Security
VITE_JWT_SECRET=your-super-secure-jwt-secret-key-here
VITE_SESSION_TIMEOUT=480
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_RATE_LIMIT_WINDOW=900000

# Email Service (EmailJS)
VITE_EMAILJS_SERVICE_ID=service_metah_production
VITE_EMAILJS_PUBLIC_KEY=your-emailjs-public-key-here
VITE_EMAILJS_VERIFICATION_TEMPLATE=template_verification_prod
VITE_EMAILJS_PASSWORD_RESET_TEMPLATE=template_password_reset_prod
VITE_EMAILJS_BOOKING_TEMPLATE=template_booking_prod
VITE_EMAILJS_WELCOME_TEMPLATE=template_welcome_prod
VITE_EMAILJS_HOST_APPLICATION_TEMPLATE=template_host_app_prod
VITE_EMAILJS_BOOKING_UPDATE_TEMPLATE=template_booking_update_prod

# Push Notifications
VITE_VAPID_PUBLIC_KEY=your-vapid-public-key-here
VITE_VAPID_PRIVATE_KEY=your-vapid-private-key-here

# Payment Processing
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-live-publishable-key
VITE_PAYPAL_CLIENT_ID=your-paypal-live-client-id
VITE_CHAPA_PUBLIC_KEY=your-chapa-live-public-key
VITE_TELEBIRR_MERCHANT_ID=your-telebirr-merchant-id

# Maps & Location
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
VITE_MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# Analytics & Monitoring
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_HOTJAR_ID=your-hotjar-id
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# CDN & Assets
VITE_CDN_BASE_URL=https://cdn.metah.travel
VITE_IMAGE_OPTIMIZATION_SERVICE=https://images.metah.travel

# Feature Flags
VITE_ENABLE_CHAT=true
VITE_ENABLE_VOICE_SEARCH=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PWA=true
VITE_ENABLE_GEOLOCATION=true
VITE_ENABLE_BIOMETRIC_AUTH=true

# Third-party Integrations
VITE_FACEBOOK_APP_ID=your-facebook-app-id
VITE_GOOGLE_CLIENT_ID=your-google-oauth-client-id
VITE_TWITTER_API_KEY=your-twitter-api-key

# Database & Cache
VITE_REDIS_URL=redis://redis.metah.travel:6379
VITE_ELASTICSEARCH_URL=https://search.metah.travel

# SMS & Communication
VITE_TWILIO_ACCOUNT_SID=your-twilio-account-sid
VITE_TWILIO_AUTH_TOKEN=your-twilio-auth-token
VITE_WHATSAPP_BUSINESS_ID=your-whatsapp-business-id

# Performance & Optimization
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_MAX_AGE=86400
VITE_IMAGE_LAZY_LOADING=true
VITE_BUNDLE_ANALYZER=false

# Internationalization
VITE_DEFAULT_LOCALE=am
VITE_SUPPORTED_LOCALES=am,en,or,ti,so
VITE_TRANSLATION_SERVICE_URL=https://translations.metah.travel

# Legal & Compliance
VITE_PRIVACY_POLICY_URL=https://metah.travel/privacy
VITE_TERMS_OF_SERVICE_URL=https://metah.travel/terms
VITE_COOKIE_POLICY_URL=https://metah.travel/cookies

# Support & Help
VITE_HELP_CENTER_URL=https://help.metah.travel
VITE_SUPPORT_EMAIL=support@metah.travel
VITE_SUPPORT_PHONE=+251-11-xxx-xxxx

# Business Configuration
VITE_COMPANY_NAME=METAH Travel
VITE_COMPANY_ADDRESS=Addis Ababa, Ethiopia
VITE_DEFAULT_CURRENCY=ETB
VITE_SUPPORTED_CURRENCIES=ETB,USD,EUR
VITE_TAX_RATE=0.15
VITE_SERVICE_FEE_RATE=0.12

# Environment Info
NODE_ENV=production
VITE_APP_ENV=production
VITE_BUILD_VERSION=1.0.0
VITE_BUILD_DATE=2024-01-01
